<!DOCTYPE html>
<html>
<head>
  <title>Collectin Post</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="https://use.fontawesome.com/8e56b09395.js"></script>
	<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>
</head>
<body>

<% if alert %>
	<p class="alert"><%= alert %></p>
<% elsif notice %>
	<p class="notice"><%= notice %></p>
<% end %>

<div id="mySidenav" class="sidenav">
<ul id="sesion">
 	<% if user_signed_in? %>
 	<li> <a href="<%= destroy_user_session_path %>" data-method='delete'>
 	Cerrar Sesión
 	</a></li>
  <li><a href="<%= favorites_posts_path %>">Mis favoritos</a></li>
  <% if current_user && current_user.admin? %>
  <li><%= link_to 'Nuevo Post', new_post_path %></li>
  <% end %>
 	<% else %>
 	<li><a href="<%= new_user_session_path %>"> Iniciar Sesión </a></li>
 	<li><a href="<%= new_user_registration_path %>"> Registrarse </a></li>
 	<% end %> 
</ul>
<br><br>


  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <br><br><br><br>
  <%= link_to "México", mexico_posts_path %>
  <%= link_to "Economía y Finanzas", economia_y_finanzas_posts_path %>
  <%= link_to "Deportes", deportes_posts_path %>
  <%= link_to "Espectáculos y Moda", espectaculos_y_moda_posts_path %>
	
</div>

<div id="main">
  <span class= "navi", style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>

<div id="logo">
		<%= link_to root_path do %> 
		<%= image_tag src="logo.png" %>
		<% end %>
</div>

<div id="banner" class="cover_escuela">
  <h1>Mantente informado</h1>
</div>

<hr class="grey">
<div id="tageo">
	<ul>
  <% tag_cloud Post.tag_counts.order('count DESC').limit(7), %w[s m l] do |tag, css_class| %>
    <li> <%= link_to tag.name, tag_path(tag.name), class: css_class %> </li>
  <% end %>
	</ul>
</div>
<hr class="grey">


<%= yield %>
</div>

<script>
function openNav() {
   document.getElementById("mySidenav").style.display = "block";

}

function closeNav() {
    document.getElementById("mySidenav").style.display = "none";
}
</script>

</body>
</html>
