<!DOCTYPE html>
<html>
<head>
  <title>Collectin Post</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="https://use.fontawesome.com/8e56b09395.js"></script>
	<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>
</head>
<body>

<% if alert %>
	<p class="alert"><%= alert %></p>
<% elsif notice %>
	<p class="notice"><%= notice %></p>
<% end %>

<div class="row">
<div id="sesion">
<ul>
  <% if user_signed_in? %>
  <li> <a href="<%= destroy_user_session_path %>" data-method='delete'>
  Cerrar Sesión
  </a></li>
  <li><a href="<%= favorites_posts_path %>">Mis favoritos</a></li>
  <% if current_user && current_user.admin? %>
  <li><%= link_to 'Nuevo Post', new_post_path %></li>
  <% end %>
  <% else %>
  <li><a href="<%= new_user_session_path %>"> Iniciar Sesión </a></li>
  <li><a href="<%= new_user_registration_path %>"> Registrarse </a></li>
  <% end %> 
</ul>
</div>
</div>

<div id="logo">
    <%= link_to root_path do %> 
    <%= image_tag src="logo.png" %>
    <% end %>
</div>


<ul class="topnav" id="myTopnav">
  <li><a class="active" href="#home"></a></li>
  <li><a href="<%=mexico_posts_path %>">México</a></li>
  <li><a href="<%=economia_y_finanzas_posts_path %>">Economía y Finanzas</a></li>
  <li><a href="<%=deportes_posts_path %>">Deportes</a></li>
  <li><a href="<%=espectaculos_y_moda_posts_path %>">Espectáculos y Moda</a></li>
  <li class="icon">
    <a href="javascript:void(0);" style="font-size:15px;" onclick="myFunction()">☰</a>
  </li>
</ul>


<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="homepage-hero-module">
    <div class="video-container">
        <div class="title-container">
            <div class="headline">
                  <h1>MANTENTE INFORMADO</h1>

            </div>
        </div>
        <div class="filter"></div>
        <video autoplay loop class="fillWidth">
            <source src="http://cdn2.editmysite.com/background-videos/Big-City-Life/Big-City-Life.mp4" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.</video>
        <div class="poster hidden">
            <img src="http://www.videojs.com/img/poster.jpg" alt="">
        </div>
    </div>
</div>

<hr class="grey">
<div id="tageo">
	<ul>
  <% tag_cloud Post.tag_counts.order('count DESC').limit(7), %w[s m l] do |tag, css_class| %>
    <li> <%= link_to tag.name, tag_path(tag.name), class: css_class %> </li>
  <% end %>
	</ul>
</div>
<hr class="grey">


<%= yield %>
</div>



<script>
function myFunction() {
    var x = document.getElementById("myTopnav");
    if (x.className === "topnav") {
        x.className += " responsive";
    } else {
        x.className = "topnav";
    }
}
</script>


<script>
  
</script>


</body>
</html>
